@model IEnumerable<Farming.Models.Payment>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BankDetails)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardDetails)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OtherDetails)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BankDetails)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardDetails)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OtherDetails)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.PaymentId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.PaymentId">Details</a> |
