@model Farming.Models.Payment

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Payment</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PaymentId" />
        <div class="form-group">
            <label asp-for="BankDetails" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BankDetails" class="form-control" />
                <span asp-validation-for="BankDetails" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CardDetails" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CardDetails" class="form-control" />
                <span asp-validation-for="CardDetails" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OtherDetails" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OtherDetails" class="form-control" />
                <span asp-validation-for="OtherDetails" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PaymentCode" class="control-label col-md-2">PaymentCode</label>
            <div class="col-md-10">
                <select asp-for="PaymentCode" class="form-control" />
                <span asp-validation-for="PaymentCode" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
